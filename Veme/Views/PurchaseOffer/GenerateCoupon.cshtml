                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
            <br />
            @using (Html.BeginForm("StoreOffer", "Admin"))
            {
                <div class="form-group ">
                    <center>
                        <input target="_blank" value="Continue" type="submit" id="button" class="btn btn-primary login-button" />
                    </center>
                </div>
            }
            <div style="text-align: center; font-size: 12px; color: #b2b2b5; margin-top: 20px">
                <p>
                    Powered by Veme <br>
                    @*<a href="javascript: void(0);" style="color: #b2b2b5; text-decoration: underline;">Unsubscribe</a>*@
